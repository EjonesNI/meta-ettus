---
 arch/arm/mach-zynq/Makefile     |  2 +-
 arch/arm/mach-zynq/board_e200.c | 65 +++++++++++++++++++++++++++++++++++++++++
 2 files changed, 66 insertions(+), 1 deletion(-)
 create mode 100644 arch/arm/mach-zynq/board_e200.c

diff --git a/arch/arm/mach-zynq/Makefile b/arch/arm/mach-zynq/Makefile
index 2c2fab73..10eae18 100644
--- a/arch/arm/mach-zynq/Makefile
+++ b/arch/arm/mach-zynq/Makefile
@@ -5,7 +5,7 @@
 # Common support
 obj-y 	:= common.o timer.o slcr.o\
 		scu_gtimer.o board_ep107.o board_zc702.o board_zc770.o\
-		board_zc770_xm013.o pl330.o platform_devices.o
+		board_e200.o board_zc770_xm013.o pl330.o platform_devices.o
 
 obj-$(CONFIG_HOTPLUG_CPU)	+= hotplug.o
 obj-$(CONFIG_SMP)		+= platsmp.o
diff --git a/arch/arm/mach-zynq/board_e200.c b/arch/arm/mach-zynq/board_e200.c
new file mode 100644
index 0000000..d7dfa36
--- /dev/null
+++ b/arch/arm/mach-zynq/board_e200.c
@@ -0,0 +1,65 @@
