From c8acecdda06da4f645a26d3fa351fcc5f95e3158 Mon Sep 17 00:00:00 2001
From: Moritz Fischer <moritz.fischer@ettus.com>
Date: Thu, 30 Mar 2017 17:51:09 -0700
Subject: [PATCH 18/38] ARM: dts: iio_hwmon to zynq dt

Signed-off-by: Moritz Fischer <moritz.fischer@ettus.com>
---
 arch/arm/boot/dts/zynq-7000.dtsi          |  6 ++++
 arch/arm/boot/dts/zynq-ni-sulfur-rev2.dts | 55 ++++++++++++++++++++++++++++---
 2 files changed, 56 insertions(+), 5 deletions(-)

diff --git a/arch/arm/boot/dts/zynq-7000.dtsi b/arch/arm/boot/dts/zynq-7000.dtsi
index f3ac9bf..5281ce3 100644
--- a/arch/arm/boot/dts/zynq-7000.dtsi
+++ b/arch/arm/boot/dts/zynq-7000.dtsi
@@ -59,6 +59,11 @@
 		regulator-always-on;
 	};
 
+	iio_hwmon {
+		compatible = "iio-hwmon";
+		io-channels = <&adc 0>;
+	};
+
 	amba: amba {
 		compatible = "simple-bus";
 		#address-cells = <1>;
@@ -72,6 +77,7 @@
 			interrupts = <0 7 4>;
 			interrupt-parent = <&intc>;
 			clocks = <&clkc 12>;
+			#io-channel-cells = <1>;
 		};
 
 		can0: can@e0008000 {
diff --git a/arch/arm/boot/dts/zynq-ni-sulfur-rev2.dts b/arch/arm/boot/dts/zynq-ni-sulfur-rev2.dts
index a729270..3bc7459 100644
--- a/arch/arm/boot/dts/zynq-ni-sulfur-rev2.dts
+++ b/arch/arm/boot/dts/zynq-ni-sulfur-rev2.dts
@@ -59,6 +59,7 @@
 		serial0 = &uart0;
 		serial1 = &uart1;
 		spi0 = &spi1;
+		spi1 = &spi0;
 		/*i2c20 = &tun;*/
 	};
 
@@ -118,6 +119,8 @@
 		#size-cells = <0>;
 		reg = <0x70>;
 
+		reset-gpios = <&gpio0 3 GPIO_ACTIVE_LOW>, <&gpio0 2 GPIO_ACTIVE_LOW>;
+
 		i2c@0 {
 			reg = <0>;
 			status = "disabled";
@@ -151,6 +154,8 @@
 				interrupts = <1 IRQ_TYPE_LEVEL_LOW>;
 				interrupt-parent = <&gpio0>;
 
+				reset-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
+
 				status = "okay";
 			};
 		};
@@ -160,14 +165,54 @@
 			status = "disabled";
 		};
 
-		i2c@6 {
+		usrpio_i2c0: i2c@6 {
+			#address-cells = <1>;
+			#size-cells = <0>;
+
 			reg = <6>;
-			status = "disabled";
+
+			hwmon@48 {
+				status = "okay";
+				compatible = "tmp112";
+				reg = <0x48>;
+			};
+
+			nvmem@50 {
+				status = "okay";
+				compatible = "at,24c02";
+				reg = <0x50>;
+			};
+
+			nvmem@51 {
+				status = "okay";
+				compatible = "at,24c256";
+				reg = <0x51>;
+			};
+
+
+			gpio@20 {
+				status = "disabled";
+				compatible = "ti,tca6408";
+				reg = <0x20>;
+				gpio-controller;
+				#gpio-cells = <2>;
+			};
 		};
 
-		i2c@7 {
-			reg = <7>;
-			status = "disabled";
+		usrpio_i2c1: i2c@7 {
+			#address-cells = <1>;
+			#size-cells = <0>;
+
+			reg = <6>;
+
+			gpio@20 {
+				status = "disabled";
+				compatible = "ti,tca6408";
+				reg = <0x20>;
+				gpio-controller;
+				#gpio-cells = <2>;
+			};
+
 		};
 	};
 };
